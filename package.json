{
  "name": "backlog-mcp",
  "version": "0.8.0",
  "description": "Minimal task backlog MCP server for Claude and AI agents",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "anthropic",
    "ai",
    "llm",
    "backlog",
    "task-management",
    "claude-code"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gkoreli/backlog-mcp.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "backlog-mcp": "./dist/server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "viewer/*.html",
    "viewer/*.css",
    "viewer/*.svg",
    "viewer/*.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc -p viewer/tsconfig.json",
    "clean": "rm -rf dist",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsc -p viewer/tsconfig.json && concurrently \"tsx watch src/server.ts\" \"tsc -p viewer/tsconfig.json --watch --preserveWatchOutput\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "gray-matter": "^4.0.3"
  }
}
