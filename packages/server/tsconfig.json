{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/server/*": ["src/server/*"],
      "@/storage/*": ["src/storage/*"],
      "@/tools/*": ["src/tools/*"],
      "@/resources/*": ["src/resources/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/cli/*": ["src/cli/*"],
      "@/search/*": ["src/search/*"],
      "@/operations/*": ["src/operations/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
